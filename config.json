{
    "extension":                    "crml",
    "use_cache":                    false,
    "cache_dir":                    "../Cache",
    "comment_symbol":               "#",
    "show_comments":                false,
    "show_block_as_comments":       false,
    "variable_match_pattern_start": "{@",
    "variable_match_pattern_end":   "}",
    "file_header":                  "Caramel template engine.",
